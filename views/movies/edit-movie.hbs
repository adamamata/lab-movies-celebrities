<h2>Edit Movie: {{movie.title}}</h2>
<form action="/movies/{{movie._id}}/edit" method="POST">
    <label for="title-input">Title:</label>
    <input type="text" name="title" id="title-input" value="{{movie.title}}">
    <label for="genre-input">Genre:</label>
    <input type="text" name="genre" id="genre-input" value="{{movie.genre}}">
    <label for="plot-input">Plot:</label>
    <input type="text" name="plot" id="plot-input" value="{{movie.plot}}">
    <label for="cast-input">Cast:</label>
    <select name="cast" id="cast-input" multiple>
        {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    <button type="submit">Submit</button>
</form> 